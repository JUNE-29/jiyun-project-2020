<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
  <properties resource="june/project/book/conf/jdbc.properties"></properties>
  
  <typeAliases>
    <typeAlias type="june.project.book.domain.BookBoard" alias="BookBoard"/>
    <typeAlias type="june.project.book.domain.Bookmark" alias="Bookmark"/>
    <typeAlias type="june.project.book.domain.Member" alias="Member"/>
    <typeAlias type="june.project.book.domain.PhotoBoard" alias="PhotoBoard"/>
    <typeAlias type="june.project.book.domain.PhotoFile" alias="PhotoFile"/>
  </typeAliases>
  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
      <property name="driver" value="${jdbc.driver}"/>
      <property name="url" value="${jdbc.url}"/>
      <property name="username" value="${jdbc.username}"/>
      <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <mapper resource="june/project/book/mapper/BookBoardMapper.xml"/>
    <mapper resource="june/project/book/mapper/BookmarkMapper.xml"/>
    <mapper resource="june/project/book/mapper/MemberMapper.xml"/>
    <mapper resource="june/project/book/mapper/PhotoBoardMapper.xml"/>
    <mapper resource="june/project/book/mapper/PhotoFileMapper.xml"/>
  </mappers>
</configuration>